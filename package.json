{
  "name": "sipm-backend",
  "version": "1.0.0",
  "description": "Sistema Integrado de Prontuário Médico (SIPM) Backend",
  "main": "dist/app.js",
  "scripts": {
    "prebuild": "npm run prebuild-unix || npm run prebuild-win",
    "prebuild-unix": "npm install -g typescript && chmod +x ./node_modules/.bin/tsc",
    "prebuild-win": "npm install -g typescript && if exist .\\node_modules\\.bin\\tsc (echo Skipping chmod for Windows)",
    "start": "ts-node src/server.ts",
    "build": "tsc",
    "test": "cross-env NODE_ENV=test npm run test:run",
    "test:run": "jest"
  },
  "dependencies": {
    "@azure/core-auth": "^1.7.2",
    "@azure/msal-node": "^2.12.0",
