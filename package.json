    "@types/twilio": "^3.19.2",
    "axios": "^1.7.2",
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.6.0",
    "express": "^4.17.1",
    "express-session": "^1.18.0",
    "express-validator": "^6.6.1",
    "firebase": "^10.12.5",
    "google-auth-library": "^6.1.6",
    "googleapis": "^140.0.1",
    "http2": "^3.3.6",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.2",
